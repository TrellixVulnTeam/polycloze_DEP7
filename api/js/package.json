{
  "name": "polycloze",
  "version": "1.0.0",
  "description": "polycloze front-end",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild --bundle src/index.ts --outdir=dist --minify --sourcemap",
    "build:watch": "esbuild --bundle src/index.ts --outdir=dist --minify --sourcemap --watch",
    "check": "npm run lint:fix && tsc",
    "lint": "eslint src/*.ts",
    "lint:fix": "eslint src/*.ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typecheck": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lggruspe/polycloze.git"
  },
  "keywords": [
    "cloze",
    "flashcards",
    "languages",
    "components"
  ],
  "author": "Levi Gruspe",
  "license": "AGPLv3",
  "bugs": {
    "url": "https://github.com/lggruspe/polycloze/issues"
  },
  "homepage": "https://github.com/lggruspe/polycloze#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "esbuild": "^0.14.39",
    "eslint": "^8.19.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "fastest-levenshtein": "^1.0.12"
  }
}
